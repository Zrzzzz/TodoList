@keyframes showDialog {
  from {
    transform: translateY(350px);
    opacity: 0;
  }
  to {
    transform: translateY(0px);
    opacity: 1;
  }
}

@keyframes hideDialog {
  from {
    transform: translateY(0px);
    opacity: 1;
  }
  to {
    transform: translateY(350px);
    opacity: 0;
  }
}
</style>

<script>
import prompt from '@system.prompt'
import asr from '@service.asr'

export default {
  data: {
    // 数据
    tmpItem: {
      event: '',
      completed: false,
      start: {
        date: '',
        time: ''
      },
      end: {
        date: '',
        time: ''
      }
    },

    // 是否显示当前页面
    isShowing: false,
    // 正在输入
    isInputting: false,
    // 新增为0，修改为1
    type: 0,
    // 正在修改的序号
    modifyingIdx: 0,
    // 是否显示时间模块
    isShowingTimeline: false
  },

  computed: {
    /* 用来动态计算蒙版底部距离 */
    bottom: {
      get() {
        if (this.isShowingTimeline) {
          return 377
        } else {
          return 272
        }
      }
    },

    doneDisabled: {
      get() {
        if (this.tmpItem.event === '') {
          return true
        } else {
          return false
        }
      }
    }
  },
  /* 用于监听 */
  onInit() {
    this.$on('showDialog', (evt) => {
      this.type = 0
      this.isShowing = true
      this.showDialog()
    })
    this.$on('modifyItem', (evt) => {
      this.type = 1
      this.isShowing = true
      this.tmpItem = evt.detail.item
      this.modifyingIdx = evt.detail.idx
      this.showDialog()
    })
  },

  showHint(msg) {
    prompt.showToast({ message: msg })
  },
  /* 更新数据 */
  updateValue(evt) {
    this.tmpItem.event = evt.value
  },
  /* 改变输入状态 */
  updateStatus() {
    this.isInputting = !this.isInputting
  },
  // date picker函数
  getStartTime(e) {
    this.tmpItem.start.time = e.hour + ':' + e.minute
  },
  getStartDate(e) {
    this.tmpItem.start.date = e.year + '年' + (e.month + 1) + '月' + e.day + '日'
  },
  getEndTime(e) {
    this.tmpItem.end.time = e.hour + ':' + e.minute
  },
  getEndDate(e) {
    this.tmpItem.end.date = e.year + '年' + (e.month + 1) + '月' + e.day + '日'
  },
  /* 增加事项 */
  addEvent() {
    this.$dispatch('addEvent', { item: this.tmpItem })
    this.cancelInputting()
    this.hideDialog()
  },
  /* 改变事项 */
  changeEvent() {
    this.$dispatch('modifiedEvent', { item: this.tmpItem, idx: this.modifyingIdx })
    this.cancelInputting()
    this.hideDialog()
  },
  /* 取消输入 */
  cancelInputting() {
    this.$element('textfield').focus({
      focus: false
    })
  },

  /* 显示添加栏 */
  showDialog() {
    // 给定初始日期 或者 用现成的
    if (this.type === 0) {
      this.setTime()
    }

    // 初始化语音模块
    let that = this
    asr.init({
      // 初始化成功后的回调函数
      success: function () {
        that.showHint('语音模块初始化成功')
      },
      // 初始化失败后的回调函数
      fail: function (data, code) {
        that.showHint(`语音模块初始化失败, code=${code}, data=${data}`)
      }
    })
    // 注册“部分识别”的响应函数，会在一次语音识别期间（asr.start 到 asr.stop 期间）被多次调用
    asr.onpartialresult = ({ result }) => {
      that.tmpItem.event = `${result}`
    }
    // 注册“语音识别停止”的响应函数，在一次语音识别完成后（asr.stop 时）被调用
    asr.oncompleteresult = ({ result }) => {
      that.tmpItem.event = `${result.match(/\[(.*)\]/)[1]}`
    }
    // 注册语音识别期间出现错误的响应函数，在出错后被调用
    asr.onerror = (error) => {
      that.showHint(`onerror: ${error}`)
    }


  },
  hideDialog() {
    this.$dispatch('hideDialog', { show: false })
    // tmpItem抛开引用
    this.tmpItem = {
      event: '',
      completed: false,
      start: {
        date: '',
        time: ''
      },
      end: {
        date: '',
        time: ''
      }
    }
    this.isShowing = false
    // 关闭语音模块
    let that = this
    asr.close({
      success: function () {
        that.showHint('语音模块已关闭')
      },
      fail: function (data, code) {
        that.showHint(`close fail, code=${code}, data=${data}`)
      }
    })
  },
  /* 用于切换时间模块是否显示 */
  showTimelineToggle() {
    this.isShowingTimeline = !this.isShowingTimeline
  },

  /* 语音识别开始和结束 */
  voiceInputStart() {
    let that = this
    // 开始一次语音识别
    that.tmpItem.event = ''
    asr.start({
      success: function () {
        that.showHint('开始识别')
      },
      fail: function (data, code) {
        that.showHint(`start fail, code=${code}, data=${data}`)
      }
    })
  },
  voiceInputStop() {
    let that = this
    // 停止当前语音识别
    asr.stop({
      success: function () {
        that.showHint('停止识别')
      },
      fail: function (data, code) {
        that.showHint(`start fail, code=${code}, data=${data}`)
      }
    })
  },

  /* 设置picker为当前时间 */
  setTime() {
    var date = new Date()
    var Y = date.getFullYear()
    var M = date.getMonth() + 1
    var D = date.getDate()
    var H = date.getHours()
    var m = date.getMinutes()
    this.tmpItem.start.date = Y + '年' + M + '月' + D + '日'
    this.tmpItem.start.time = H + ':' + m
    date.setHours(date.getHours() + 1)

    var Y = date.getFullYear()
    M = date.getMonth() + 1
    D = date.getDate()
    H = date.getHours()
    m = date.getMinutes()
    this.tmpItem.end.date = Y + '年' + M + '月' + D + '日'
    this.tmpItem.end.time = H + ':' + m
  }

}
</script>
